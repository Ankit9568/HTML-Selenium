<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="Rsystems HTML Testing">

<listeners>
<listener class-name="com.rsystems.utils.TestListenerAdapter"></listener>
</listeners>

	<test name="Hub Test Case ">
		<classes>
			<class name="com.rsystems.test.HubTestCases" >
				<methods>
					<include name="testHubTranslation" />
					<include name="testHubTextLineRightNavigation" />
					<include name="testHubTextLineLeftNavigation" />
					<include name="testHubMenuFontsNonFocused" />
				</methods>
			</class>
		</classes>
	</test>
	<test name="SettingsTestCases Test Cases ">
		<classes>
			<class name="com.rsystems.test.SettingsTestCases" >
				<methods>
					<include name="epgSettingScreenTitleMatch" />
				</methods>
			</class>
		</classes>
	</test>
	
<test name="EPG Setting Test case " >
	<classes>
		<class name="com.rsystems.test.EPGTestCases">
			<methods>
				<include name="standardEPG_Validation" />
				<include name="seniorGreenGrayEPG_Validation" />
				<include name="seniorGreenStandardEPG_Validation" />
				<include name="seniorGreenYellowEpgValidation" />
				<include name="seniorStandardStandardEpgValidation" />
				<include name="seniorStandardYellowEpgValidation" />
				<include name="seniorStandardGrayEpgValidation" />
				<include name="strakStandardStandardEpgValidation" />
				<include name="strakGreenStandardEpgValidation" />
				<include name="strakGreenGrayEpgValidation" />
				<include name="strakGreenYellowEpgValidation" />
				<include name="strakStandardGrayEpgValidation" />
<!-- 				<include name="strakStandardYellowEpgValidation" /> -->
			</methods>
		</class>
	</classes>
</test>	

<test name="Library Test case " >
	<classes>
		<class name="com.rsystems.test.LibraryTestCase">
			<methods>
				<include name="verifyLibraryMenuItemsText" />
				<include name="verifyLibraryItemsFontSize" />
				<include name="verifyLibraryMenuSubListText" />
				<include name="verifyLibraryMenuSubListFontSize" />
			</methods>
		</class>
	</classes>
</test>	
<test name="Recording Test case " >
	<classes>
		<class name="com.rsystems.test.RecordingTestCase">
			<methods>
				<include name="verifyStartSingleRecording" />
				<include name="verifySingleAssetIsDeleted" />
			</methods>
		</class>
	</classes>
</test>
<test name="PIP Setting Test case " >
	<classes>
		<class name="com.rsystems.test.PIPTestCases">
			<methods>
				<include name="verifyLinksPipPosition" />
				<include name="verifyStandardPipPosition" />
			</methods>
		</class>
	</classes>
</test>	

</suite>
